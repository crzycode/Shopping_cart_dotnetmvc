@model IEnumerable<Shopping_cart_dotnetmvc.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img  src="~/Content/Image/@item.Product_image" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3>@item.Product_name</h3>
                    </div>
                    <button class="btn btn-danger" onclick="addtocart(@item.Product_id)"><i class="fa-solid fa-cart-plus"></i> &nbsp; Add To Cart</button>
                </div>
            </div>
        }
    </div>
</div>


